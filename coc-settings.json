{
    "git.enableGutters": false,
    "diagnostic.displayByAle": true,
    "diagnostic.enable": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "lua": {
          "command": "lua-lsp",
          "filetypes": ["lua"]
        }
    },
    "coc.preferences.formatOnType": false
}
